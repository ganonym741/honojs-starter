{
  "name": "honojs-boilerplate",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready Hono.js boilerplate with authentication, PostgreSQL, Redis, and payment integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:pull": "npx prisma db pull",
    "db:generate": "npx prisma generate --schema=prisma/schema.prisma",
    "db:seeding": "npx prisma db seed",
    "db:migration": "npx prisma migrate reset && npx prisma migrate dev --name migration",
    "db:diff:migration": "npx prisma migrate resolve",
    "db:re:migration": "npx prisma migrate deploy",
    "db:studio": "prisma studio",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "honojs",
    "boilerplate",
    "typescript",
    "postgresql",
    "prisma",
    "redis",
    "jwt",
    "authentication",
    "payment",
    "doku",
    "modular",
    "production-ready",
    "docker",
    "docker-compose"
  ],
  "author": "Ganonym741",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.5",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "7.2",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.3",
    "hono": "^4.6.5",
    "hono-simple-di": "^0.2.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.15.0",
    "prettier": "^3.4.1",
    "prisma": "7.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
